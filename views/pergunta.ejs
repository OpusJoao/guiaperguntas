<%- include('partials/header') -%>
<!-- App css -->
<link rel="stylesheet" href="/css/perguntar.css">
<%- include('partials/navbar') -%>
<div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
        <h3>Responda</h3>
        <label for="">Resposta: </label>
        <textarea placeholder="Digite sua resposta" class="form-control" name="corpo" id="" cols="30" rows="10"></textarea>
        <input type="hidden" name="id" value="<%= pergunta.id %>">
        <br>
        <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
        <div class="card mb-3">
            <div class="card-body">
                <p><%= resposta.corpo %></p>
            </div>
        </div>    
    <% }) %>
</div>
<%- include('partials/footer') -%>